#!/usr/bin/env bash

sudo apt install curl npm
NVM_DIR="$HOME/.nvm"
curl -o- https://raw.githubusercontent.com/nvm-sh/nvm/v0.40.1/install.sh | bash | NVM_DIR="$NVM_DIR"
export NVM_DIR="$NVIM_DIR"
source "$NVM_DIR/nvm.sh"
nvm install --lts
nvm alias default 'lts/*'

npm config set prefix ~/.local/npm
